@article{hillebrand2020,
  title = {Thresholds for Ecological Responses to Global Change Do Not Emerge from Empirical Data},
  author = {Hillebrand, Helmut and Donohue, Ian and Harpole, W. Stanley and Hodapp, Dorothee and Kucera, Michal and Lewandowska, Aleksandra M. and Merder, Julian and Montoya, Jose M. and Freund, Jan A.},
