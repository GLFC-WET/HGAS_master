@article{gewurtz2011,
  title = {Influence of Fish Size and Sex on Mercury/{{PCB}} Concentration: {{Importance}} for Fish Consumption Advisories},
  shorttitle = {Influence of Fish Size and Sex on Mercury/{{PCB}} Concentration},
  author = {Gewurtz, Sarah B. and Bhavsar, Satyendra P. and Fletcher, Rachael},
