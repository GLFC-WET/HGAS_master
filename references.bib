@article{zlatanovic2018,
  title = {Shading and Sediment Structure Effects on Stream Metabolism Resistance and Resilience to Infrequent Droughts},
  author = {Zlatanovi{\'c}, Sanja and Fabian, Jenny and Premke, Katrin and Mutz, Michael},
