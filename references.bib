}

@article{astridtaylor2016,
  title = {Short-Term Effects of Stump Harvesting on Millipedes and Centipedes on Coniferous Tree Stumps\ding{73}},
  author = {{Astrid Taylor} and Taylor, Astrid and {Sverdrup-Thygeson}, Anne and {Jonas Victorsson} and Victorsson, Jonas},
