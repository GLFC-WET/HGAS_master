  keywords = {{Water Pollutants, Chemical},Animals,Bayes Theorem,Canada,Carps,Environmental Monitoring,Fishes,Food Chain,Great Lakes Region,Lakes,Linear Models,Mercury,Perches,Salmon,Trout}
