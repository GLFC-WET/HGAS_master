@article{finer2016,
  title = {Does Clear-Cut Harvesting Accelerate Initial Wood Decomposition? {{A}} Five-Year Study with Standard Wood Material},
  author = {Fin{\'e}r, Leena and J{\"u}rgensen, Martin F. and Palviainen, Marjo and Piirainen, Sirpa and {Page-Dumroese}, Debbie},
