@article{hoeppke2021,
  title = {Maxnodf: {{An R}} Package for Fair and Fast Comparisons of Nestedness between Networks},
  shorttitle = {Maxnodf},
  author = {Hoeppke, Christoph and Simmons, Benno I.},
