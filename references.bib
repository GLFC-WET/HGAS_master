@article{buck2019,
  title = {A Global-Scale Assessment of Fish Mercury Concentrations and the Identification of Biological Hotspots},
  author = {Buck, David G. and Evers, David C. and Adams, Evan M. and DiGangi, Joseph and Beeler, Bjorn and Sam{\'a}nek, Jan and Petrlik, Jindrich and Turnquist, Madeline A. and Speranskaya, Olga and Regan, Kevin and Johnson, Sarah A. and Johnson, Sarah A.},
