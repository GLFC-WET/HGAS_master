@article{christopherb.trivedi2022,
  title = {{{DNA}}/{{RNA Preservation}} in {{Glacial Snow}} and {{Ice Samples}}},
  author = {{Christopher B. Trivedi} and {Christoph Keuschnig} and {Catherine Larose} and {Daniel Vasconcelos Rissi} and {Rey Mourot} and {James A. Bradley} and {Matthias Winkel} and {Liane G. Benning}},
  year = {2022},
