@article{lepage2024,
  title = {Biodilution of {{Organic Species}} of {{Arsenic}} in {{Freshwater Food Webs}}},
  author = {Lepage, Adam T. and Lescord, Gretchen L. and Lock, Alan and Johnston, Thomas A. and Gandhi, Jay and Gunn, John M.},
  year = {2024},
