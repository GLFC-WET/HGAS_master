@article{jamess.sinclair2021,
  title = {Functional Traits Reveal the Dominant Drivers of Long-Term Community Change across a {{North American Great Lake}}.},
  author = {{James S. Sinclair} and Sinclair, James S. and Fraker, Michael E. and Hood, James M. and Frank, K. T. and Frank, Kenneth T. and {M R DuFour} and {Mark R. DuFour} and DuFour, Mark R. and Gorman, Ann Marie and {A M Gorman} and Ludsin, Stuart A.},
  year = {2021},
