@article{jones2000,
  title = {Effects of {{Roads}} on {{Hydrology}}, {{Geomorphology}}, and {{Disturbance Patches}} in {{Stream Networks}}},
  author = {Jones, Julia A. and Swanson, Frederick J. and Wemple, Beverley C. and Snyder, Kai U.},
  year = {2000},
